extend layout

block content
  h1= title

  form(action='' method="POST")
    div(class="form-group row")
      label(for="name" class="col-sm-2 col-form-label") Name
      div(class="col-sm-10")
        input(type="text" class="form-control" id="name" name="name" value=(brand===undefined ? '' : brand.name))         
    div(class="form-group row")
      label(for="description" class="col-sm-2 col-form-label") Description
      div(class="col-sm-10")
        input(type="text" class="form-control" id="description" name="description" value=(brand===undefined ? '' : brand.name))
    div(class="form-group row")
      div(class="col-sm-10")
        button(type="submit" class="btn btn-primary") Add To Inventory    
  
  if errors 
    ul
      for error in errors
        li!= error.msg